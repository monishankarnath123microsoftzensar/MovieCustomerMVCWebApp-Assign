@model MovieCustomerMVCwithAuthen.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)

        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DOB)

        @Html.TextBoxFor(m => m.Customer.DOB, "{0:dd MMM yyyy}", new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), " ", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribe) Subscribe.
        </label>

    </div>
    @Html.HiddenFor(m=>m.Customer.Id)
    @*<div class="form-group">
            @Html.LabelFor(m => m.IsSubscribe)
        </div>*@
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="reset" class="btn btn-danger">Reset</button>
}
